@model Application.ViewModels.SaveTipoViewModel
@{
    bool EditMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "SaveTipo";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4>
                        @(EditMode ? $"Editando Tipo:{Model.Name}": "creando Tipo")
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Tipo" asp-action="@(EditMode ? "Edit":"Create")">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre Del Tipo: </label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>

                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a asp-controller="Tipo" asp-action="Tipomant" class="btn btn-warning">Volver atras</a>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
