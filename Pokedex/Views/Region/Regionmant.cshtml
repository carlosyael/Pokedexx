@model List<Application.ViewModels.RegionViewModel>

    @{
        ViewData["Title"] = "Mantenimiento Regiones";
    }



    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-3 offset-9">
                <a asp-controller="Region" asp-action="Create" class="btn btn-sm btn-outline-success">Crear Nueva Region</a>
            </div>
        </div>
        <div class="row">
            @if (Model == null || Model.Count == 0)
            {
                <h2>No Hay Regiones</h2>
            }
            else
            {
                @foreach (Application.ViewModels.RegionViewModel item in Model)
                {

                    <div class="col-4">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h4>@item.Name</h4>

                                <div clas="d-flex justify-content-between aling-items-center">
                                    <div class="btn-group">

                                        <a asp-controller="Region" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                        <a asp-controller="Region" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>

